#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    int first_digit;
    int last_digit;
    int temp;

    printf("Enter an integer: ");
    if (scanf("%d", &n) != 1) {
        printf("Invalid input.\n");
        return 1;
    }

    n = abs(n);
    if (n == 0) {
        printf("Sum of first and last digit of 0 is 0.\n");
        return 0;
    }

    last_digit = n % 10;
    temp = n;

    for (; temp >= 10; temp /= 10);

    first_digit = temp;

    printf("First digit: %d\n", first_digit);
    printf("Last digit: %d\n", last_digit);
    printf("Sum of first and last digits: %d\n", first_digit + last_digit);

    return 0;
}
