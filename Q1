#include <stdio.h>

int main() {
    int n;
    int i;

    printf("Enter a positive integer (n): ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input or non-positive number.\n");
        return 1;
    }

    printf("Natural numbers from %d to 1 in reverse:\n", n);
    for (i = n; i >= 1; i--) {
        printf("%d ", i);
    }
    printf("\n");

    return 0;
}
