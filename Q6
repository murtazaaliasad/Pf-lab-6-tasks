#include <stdio.h>

int main() {
    int n;
    int i;
    int sum_of_divisors = 0;

    printf("Enter a positive integer: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Invalid input or non-positive number.\n");
        return 1;
    }

    for (i = 1; i < n; i++) {
        if (n % i == 0) {
            sum_of_divisors += i;
        }
    }

    if (sum_of_divisors == n) {
        printf("%d is a perfect number.\n", n);
    } else {
        printf("%d is not a perfect number.\n", n);
    }

    return 0;
}
